<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/master_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST"
        android:textSize="30dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/master_info"

        tools:ignore="MissingConstraints">

        <View
            android:id="@+id/choice_wood"
            style="@style/master_choice_cell"
            android:background="@color/resource_wood_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resource_wood_name" />

        <View
            android:id="@+id/choice_brick"
            style="@style/master_choice_cell"
            android:background="@color/resource_brick_color"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resource_brick_name" />

        <View
            android:id="@+id/choice_stone"
            style="@style/master_choice_cell"
            android:background="@color/resource_stone_color"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resource_stone_name" />

        <View
            android:id="@+id/choice_wheat"
            style="@style/master_choice_cell"
            android:background="@color/resource_wheat_color"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resource_wheat_name" />

        <View
            android:id="@+id/choice_glass"
            style="@style/master_choice_cell"
            android:background="@color/resource_glass_color"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resource_glass_name" />

        <Button
            android:id="@+id/toGameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>